// ============================================
// [F079] src/lib/types.ts
// Central TypeScript Type Definitions
// ============================================

// ---- User Types ----
export interface User {
  id: string;
  google_id: string | null;
  email: string;
  name: string;
  avatar_url: string | null;
  preferred_language: 'en' | 'fa';
  created_at: string;
  updated_at: string;
}

// ---- Comprehensive CV Types ----
export interface PersonalInfo {
  full_name: string;
  email: string;
  phone: string;
  location: string;
  linkedin_url: string;
  website_url: string;
  summary: string;
}

export interface WorkExperience {
  id: string;
  job_title: string;
  company: string;
  location: string;
  start_date: string;
  end_date: string | null;
  is_current: boolean;
  description: string;
  achievements: string[];
}

export interface Education {
  id: string;
  degree: string;
  institution: string;
  location: string;
  start_date: string;
  end_date: string;
  gpa: string | null;
  description: string;
}

export interface Certification {
  id: string;
  name: string;
  issuer: string;
  date_obtained: string;
  expiry_date: string | null;
  credential_url: string | null;
}

export interface ComprehensiveCV {
  id: string;
  user_id: string;
  personal_info: PersonalInfo;
  work_experience: WorkExperience[];
  education: Education[];
  skills: string[];
  certifications: Certification[];
  languages: { language: string; proficiency: string }[];
  projects: { id: string; name: string; description: string; url: string | null }[];
  additional_sections: { title: string; content: string }[];
  raw_text: string;
  created_at: string;
  updated_at: string;
}

export interface CVFieldStatus {
  field_name: string;
  is_complete: boolean;
  current_value: any;
}

// ---- Prompt Types ----
export interface Prompt {
  id: string;
  title_en: string;
  title_fa: string;
  description_en: string;
  description_fa: string;
  prompt_text: string;
  category: string;
  is_active: boolean;
  sort_order: number;
  created_at: string;
  updated_at: string;
}

// ---- AI Types ----
export type AIProviderName = 'openai' | 'anthropic' | 'google';

export interface AIApiKey {
  id: string;
  user_id: string;
  provider_name: AIProviderName;
  api_key_encrypted: string;
  is_valid: boolean;
  available_models: AIModel[];
  token_balance: string | null;
  last_validated_at: string | null;
  created_at: string;
  updated_at: string;
}

export interface AIModel {
  model_id: string;
  model_name: string;
  provider: AIProviderName;
}

export interface AISelection {
  provider: AIProviderName;
  model_id: string;
  role: 'draft' | 'final';
}

export interface AIChatMessage {
  role: 'system' | 'user' | 'assistant';
  content: string;
}

// ---- Application Types ----
export type OutputLanguage = 'en' | 'fa' | 'fr' | 'de' | 'es' | 'ar' | 'zh' | 'tr';

export type ToneMode = 'preset' | 'custom';

export interface ToneSetting {
  mode: ToneMode;
  preset_value: string | null;   // e.g., 'formal', 'semi-formal', 'friendly', 'professional', 'creative'
  custom_text: string | null;
}

export interface JobApplication {
  id: string;
  user_id: string;
  job_description: string;
  selected_prompt_ids: string[];
  ai_selections: AISelection[];
  output_language: OutputLanguage;
  tone_setting: ToneSetting;
  selected_template_ids: {
    cv: string | null;
    cover_letter: string | null;
    email: string | null;
  };
  ai_questions: AIChatMessage[];
  draft_outputs: DraftOutput[];
  final_output: FinalOutput | null;
  edited_output: FinalOutput | null;
  status: 'input' | 'processing' | 'clarification' | 'draft_ready' | 'editing' | 'finalized';
  created_at: string;
  updated_at: string;
}

export interface DraftOutput {
  ai_provider: AIProviderName;
  ai_model: string;
  content: string;
  created_at: string;
}

export interface FinalOutput {
  tailored_cv: string;
  cover_letter: string;
  application_email: string;
}

// ---- Template Types ----
export type TemplateType = 'cv' | 'cover_letter' | 'email';
export type FileFormat = 'docx' | 'md';

export interface Template {
  id: string;
  user_id: string;
  template_name: string;
  template_type: TemplateType;
  file_format: FileFormat;
  file_content: string;
  created_at: string;
  updated_at: string;
}

// ---- UI Types ----
export type AppLocale = 'en' | 'fa';

export interface NavigationItem {
  label_key: string;
  href: string;
  icon: string;
}
